    <!-- Bean definitions go here -->
   
    <bean id="userIO" class="flooringmastery.ui.UserIOConsoleImpl"/>
    
    <bean id="view" class="flooringmastery.ui.FlooringMasteryView">
        <constructor-arg ref="userIO"/>
    </bean>
    
    <bean id="FlooringMasteryDao" 
          class="flooringmastery.dao.FlooringMasteryDaoFileImpl"/>
    
    <bean id="auditDao" 
          class="flooringmastery.dao.FlooringMasteryAuditDaoFileImpl"/>
    
    <bean id="serviceLayer" 
          class="flooringmastery.service.FlooringMasteryServiceLayerImpl">
        <constructor-arg ref="FlooringMasteryDao"/>  
        <constructor-arg ref="auditDao"/>        
    </bean>
   
    <bean id="controller" 
          class="flooringmastery.controller.FlooringMasteryController">
        <constructor-arg ref="view"/>
        <constructor-arg ref="serviceLayer"/>
    </bean>
    
